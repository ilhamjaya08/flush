{
  "name": "flush-cli",
  "version": "0.1.0",
  "description": "Flush framework CLI tool - Laravel-inspired commands for Bun",
  "type": "module",
  "bin": {
    "flush": "dist/cli.js"
  },
  "main": "./dist/index.js",
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "bun build src/cli.ts --outdir dist --target bun --format esm",
    "dev": "bun run --watch src/cli.ts",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "chalk": "^5.3.0",
    "inquirer": "^9.2.0",
    "flush-core": "^0.1.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/inquirer": "^9.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "flush",
    "cli",
    "framework",
    "bun",
    "typescript",
    "artisan",
    "generator"
  ],
  "author": "Flush Framework Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ilhamjaya08/flush-framework.git",
    "directory": "packages/cli"
  },
  "homepage": "https://flush-framework.dev",
  "bugs": {
    "url": "https://github.com/ilhamjaya08/flush-framework/issues"
  }
}
