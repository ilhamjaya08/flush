{
  "name": "flush-core",
  "version": "0.1.1",
  "description": "Flush framework core - A fast, clean MVC framework for Bun",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target bun --format esm && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --outDir dist",
    "dev": "bun run --watch src/index.ts",
    "prepublishOnly": "bun run build"
  },
  "dependencies": {
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "bun": ">=1.0.0"
  },
  "keywords": [
    "flush",
    "framework",
    "bun",
    "typescript",
    "mvc",
    "web",
    "server"
  ],
  "author": "Flush Framework Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ilhamjaya08/flush-framework.git",
    "directory": "packages/core"
  },
  "homepage": "https://flush-framework.dev",
  "bugs": {
    "url": "https://github.com/ilhamjaya08/flush-framework/issues"
  }
}